<script>
    async function downloadPDF() {
        const loadingIndicator = document.getElementById('loadingIndicator');
        const downloadBtn = document.querySelector('.download-btn');
        
        try {
            // Show loading indicator
            loadingIndicator.style.display = 'block';
            downloadBtn.disabled = true;
            downloadBtn.textContent = 'generating...';

            const { jsPDF } = window.jspdf;
            
            // Create PDF with custom page size for better fitting
            const pdf = new jsPDF({
                orientation: 'portrait',
                unit: 'mm',
                format: 'a4'
            });

            // Get the menu content
            const menuElement = document.getElementById('menuContent');
            
            // Temporarily modify styles for better PDF rendering
            const originalBackground = document.body.style.background;
            const originalPadding = document.body.style.padding;
            document.body.style.background = 'white';
            document.body.style.padding = '0';

            // Create canvas from the menu content
            const canvas = await html2canvas(menuElement, {
                scale: 2, // Higher quality
                useCORS: true,
                backgroundColor: '#ffffff',
                logging: false,
                width: menuElement.offsetWidth,
                height: menuElement.offsetHeight,
                scrollX: 0,
                scrollY: 0
            });

            // Restore original styles
            document.body.style.background = originalBackground;
            document.body.style.padding = originalPadding;

            const imgData = canvas.toDataURL('image/jpeg', 0.98);
            
            // Calculate dimensions for PDF
            const pdfWidth = pdf.internal.pageSize.getWidth();
            const pdfHeight = pdf.internal.pageSize.getHeight();
            const imgWidth = canvas.width;
            const imgHeight = canvas.height;
            
            // Calculate scaling to fit content properly
            const ratio = Math.min(pdfWidth / imgWidth, pdfHeight / imgHeight) * 72;
            const scaledWidth = imgWidth * ratio;
            const scaledHeight = imgHeight * ratio;

            // Split content into two pages
            // First page: Header + cocktails (approximately first 60% of content)
            const firstPageHeight = scaledHeight * 0.6;
            
            // Add first page
            pdf.addImage(imgData, 'JPEG', 0, 0, scaledWidth, scaledHeight, '', 'FAST');
            
            // Add second page
            pdf.addPage();
            
            // Calculate offset for second page (wine section)
            const secondPageOffset = -firstPageHeight * 0.8;
            pdf.addImage(imgData, 'JPEG', 0, secondPageOffset, scaledWidth, scaledHeight, '', 'FAST');

            // Save the PDF
            const currentDate = new Date().toISOString().slice(0, 10);
            pdf.save(`DOOR64-Menu-${currentDate}.pdf`);

        } catch (error) {
            console.error('Error generating PDF:', error);
            alert('Sorry, there was an error generating the PDF. Please try again.');
        } finally {
            // Hide loading indicator
            loadingIndicator.style.display = 'none';
            downloadBtn.disabled = false;
            downloadBtn.textContent = 'download menu';
        }
    }

    // Add touch-friendly interaction for mobile
    document.addEventListener('DOMContentLoaded', function() {
        const downloadBtn = document.querySelector('.download-btn');
        
        // Add touch feedback for mobile
        downloadBtn.addEventListener('touchstart', function() {
            this.style.transform = 'translateY(0) scale(0.98)';
        });
        
        downloadBtn.addEventListener('touchend', function() {
            this.style.transform = 'translateY(-2px) scale(1)';
        });
    });
</script>
